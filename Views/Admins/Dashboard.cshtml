@model EWDProject.Models.Admin

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Welcome, Admin @Model.Name!</h2>
                <form asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                </form>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4>Admin Information</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <div class="d-grid gap-3">
                        <a asp-controller="Books" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-book"></i> Manage Books
                        </a>
                        <a asp-controller="Customers" asp-action="CustomersList" class="btn btn-success btn-lg">
                            <i class="bi bi-people"></i> Manage Customers
                        </a>
                        <a asp-controller="Orders" asp-action="History" class="btn btn-info btn-lg">
                            <i class="bi bi-clock-history"></i> View All Orders
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.AdminId" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Statistics != null)
    {
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h5 class="card-title">Total Books</h5>
                        <p class="card-text h2">@ViewBag.Statistics.TotalBooks</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h5 class="card-title">Total Customers</h5>
                        <p class="card-text h2">@ViewBag.Statistics.TotalCustomers</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h5 class="card-title">Total Orders</h5>
                        <p class="card-text h2">@ViewBag.Statistics.TotalOrders</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body">
                        <h5 class="card-title">Revenue</h5>
                        <p class="card-text h2">@ViewBag.Statistics.TotalRevenue.ToString("C")</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>