@model EWDProject.Models.Customer

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Welcome, @Model.Name!</h2>
                <form asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                </form>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4>Your Information</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Customer ID</dt>
                        <dd class="col-sm-8">@Model.CustomerId</dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-primary">Edit Profile</a>
            </div>
        </div>
    </div>
</div>