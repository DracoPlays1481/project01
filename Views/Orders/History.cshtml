@model IEnumerable<EWDProject.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<div class="container mt-4">
    <h2>Order History</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New Order</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Total Items</th>
                    <th>Total Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    var totalAmount = order.Orderitems.Sum(item => item.Book.Price * item.Quantity);
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.OrderDate.ToString("MM/dd/yyyy HH:mm")</td>
                        <td>
                            <span class="badge @(order.OrderStatus == "Saved" ? "bg-warning" : "bg-success")">
                                @order.OrderStatus
                            </span>
                        </td>
                        <td>@order.Orderitems.Sum(item => item.Quantity)</td>
                        <td>@totalAmount.ToString("C")</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                @if (order.OrderStatus == "Saved")
                                {
                                    <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>